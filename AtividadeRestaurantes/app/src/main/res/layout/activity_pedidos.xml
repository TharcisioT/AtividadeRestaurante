<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título do Formulário -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedidos Selecionados"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CardView para Pedido 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPedido1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <TextView
            android:id="@+id/textViewPedido1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido 1: Pizza de Queijo"
            android:textSize="18sp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            />
    </androidx.cardview.widget.CardView>

    <!-- CardView para Pedido 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPedido2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewPedido1">

        <TextView
            android:id="@+id/textViewPedido2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido 2: Suco de Laranja"
            android:textSize="18sp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            />
    </androidx.cardview.widget.CardView>

    <!-- CardView para Pedido 3 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPedido3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewPedido2">

        <TextView
            android:id="@+id/textViewPedido3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedido 3: Água"
            android:textSize="18sp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            />

    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:scaleY="1.5"
        android:src="@drawable/_a"
         />
    <!-- Botão Confirmar Pedido -->
    <Button
        android:id="@+id/buttonConfirmarPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FF0000"
        android:onClick="abrirNovaTela"
        android:paddingStart="24dp"
        android:paddingTop="12dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:text="Confirmar Endereço"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
